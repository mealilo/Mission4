@{
    ViewData["Title"] = "List of All Movies";
}
@model List<Movie>



<table class="table table-striped table-bordered table-dark table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Edited?</th>
            <th>Lent to</th>
            <th>Notes</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        

    </thead>


    <tbody>
        @foreach (Movie movie in Model)
        {
        <tr>
            <td>
                @movie.title
            </td>
            <td>
                @movie.rating
            </td>
            <td>
                @movie.category
            </td>
            <td>
                @movie.year
            </td>
            <td>
                @movie.director
            </td>
            <td>
                @movie.edited
            </td>
            <td>
                @movie.lentTo
            </td>
            <td>
                @movie.notes
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-MovieID="@movie.MovieID">Edit</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Delete" asp-route-MovieID="@movie.MovieID">Delete</a>
            </td>
        </tr>
            
        }
    </tbody>
</table>
